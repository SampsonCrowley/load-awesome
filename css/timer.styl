@import './mixins/add-view'

$color-1 = #fff
$color-2 = #333

.la-timer
.la-timer > div
  position relative
  box-sizing border-box

.la-timer
  display block
  font-size 0
  color $color-1
  width 32px
  height 32px

  &.la-dark
    color $color-2

  >div
    display inline-block
    float none
    background-color currentColor
    border 0 solid currentColor
    width 32px
    height 32px
    background transparent
    border-width 2px
    border-radius 100%

    &:before
      height 12px

    &:after
      height 8px
      animation-duration 15s
      animation-delay -7.5s

  &.la-sm
    width 16px
    height 16px

    >div
      width 16px
      height 16px
      border-width 1px

      &:before
        height 6px

      &:after
        height 4px

  &.la-2x
    width 64px
    height 64px

    >div
      width 64px
      height 64px
      border-width 4px

      &:before
        height 24px

      &:after
        height 16px

  &.la-3x
    width 96px
    height 96px

    >div
      width 96px
      height 96px
      border-width 6px

      &:before
        height 36px

      &:after
        height 24px

.la-timer > div:before
.la-timer > div:after
  position absolute
  top 14px
  left 14px
  display block
  width 2px
  margin-top -1px
  margin-left -1px
  content ""
  background currentColor
  border-radius 2px
  transform-origin 1px 1px 0
  animation timer-loader 1250ms infinite linear
  animation-delay -625ms

.la-timer.la-sm > div:before
.la-timer.la-sm > div:after
  top 7px
  left 7px
  width 1px
  margin-top -.5px
  margin-left -.5px
  border-radius 1px
  transform-origin .5px .5px 0

.la-timer.la-2x > div:before
.la-timer.la-2x > div:after
  top 28px
  left 28px
  width 4px
  margin-top -2px
  margin-left -2px
  border-radius 4px
  transform-origin 2px 2px 0

.la-timer.la-3x > div:before
.la-timer.la-3x > div:after
  top 42px
  left 42px
  width 6px
  margin-top -3px
  margin-left -3px
  border-radius 6px
  transform-origin 3px 3px 0

/*
 * Animation
 */

@keyframes timer-loader
  0%
    transform rotate(0deg)

  100%
    transform rotate(360deg)
