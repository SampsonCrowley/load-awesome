@import './mixins/add-view'

$color-1 = #fff
$color-2 = #333

.la-ball-scale-multiple
.la-ball-scale-multiple > div
  position relative
  box-sizing border-box

.la-ball-scale-multiple
  display block
  font-size 0
  color $color-1
  width 32px
  height 32px

  &.la-dark
    color $color-2

  >div
    display inline-block
    float none
    background-color currentColor
    border 0 solid currentColor
    position absolute
    top 0
    left 0
    width 32px
    height 32px
    border-radius 100%
    opacity 0
    animation ball-scale-multiple 1s 0s linear infinite

    &:nth-child(2)
      animation-delay .2s

    &:nth-child(3)
      animation-delay .4s

  &.la-sm
    width 16px
    height 16px

    >div
      width 16px
      height 16px

  &.la-2x
    width 64px
    height 64px

    >div
      width 64px
      height 64px

  &.la-3x
    width 96px
    height 96px

    >div
      width 96px
      height 96px

/*
 * Animation
 */

@keyframes ball-scale-multiple
  0%
    opacity 0
    transform scale(0)

  5%
    opacity .75

  100%
    opacity 0
    transform scale(1)
