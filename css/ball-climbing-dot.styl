@import './mixins/template'

+template('.la-ball-climbing-dot', 20px, 0.8)
  display inline-block
  float none
  background-color currentColor
  border 0 solid currentColor

  &:nth-child(1)
    position absolute
    bottom 32%
    left 18%
    width 32%
    height 40%
    border-radius 100%
    transform-origin center bottom
    animation ball-climbing-dot-jump .6s ease-in-out infinite

  &:not(:nth-child(1))
      position absolute
      top 0
      right 0
      width 40%
      height 6.25%
      border-radius 0
      transform translate(60%, 0)
      animation ball-climbing-dot-steps 1.8s linear infinite

      &:nth-child(2)
        animation-delay 0ms

      &:nth-child(3)
        animation-delay -600ms

      &:nth-child(4)
        animation-delay -1200ms

/*
 * Animations
 */

@keyframes ball-climbing-dot-jump
  0%
    transform scale(1, .7)

  20%
    transform scale(.7, 1.2)

  40%
    transform scale(1, 1)

  50%
    bottom 125%

  46%
    transform scale(1, 1)

  80%
    transform scale(.7, 1.2)

  90%
    transform scale(.7, 1.2)

  100%
    transform scale(1, .7)

@keyframes ball-climbing-dot-steps
  0%
    top 0
    right 0
    opacity 0

  50%
    opacity 1

  100%
    top 100%
    right 100%
    opacity 0
