@import './mixins/add-view'

$color-1 = #fff
$color-2 = #333

.la-ball-zig-zag-deflect
.la-ball-zig-zag-deflect > div
  position relative
  box-sizing border-box

.la-ball-zig-zag-deflect
  display block
  font-size 0
  color $color-1
  position relative
  width 32px
  height 32px

  &.la-dark
    color $color-2

  >div
    display inline-block
    float none
    background-color currentColor
    border 0 solid currentColor
    position absolute
    top 50%
    left 50%
    width 10px
    height 10px
    margin-top -5px
    margin-left -5px
    border-radius 100%

    &:first-child
      animation ball-zig-deflect 1.5s 0s infinite linear

    &:last-child
      animation ball-zag-deflect 1.5s 0s infinite linear

  &.la-sm
    width 16px
    height 16px

    >div
      width 4px
      height 4px
      margin-top -2px
      margin-left -2px

  &.la-2x
    width 64px
    height 64px

    >div
      width 20px
      height 20px
      margin-top -10px
      margin-left -10px

  &.la-3x
    width 96px
    height 96px

    >div
      width 30px
      height 30px
      margin-top -15px
      margin-left -15px

/*
 * Animations
 */

@keyframes ball-zig-deflect
  17%
    transform translate(-80%, -160%)

  34%
    transform translate(80%, -160%)

  50%
    transform translate(0, 0)

  67%
    transform translate(80%, -160%)

  84%
    transform translate(-80%, -160%)

  100%
    transform translate(0, 0)

@keyframes ball-zag-deflect
  17%
    transform translate(80%, 160%)

  34%
    transform translate(-80%, 160%)

  50%
    transform translate(0, 0)

  67%
    transform translate(-80%, 160%)

  84%
    transform translate(80%, 160%)

  100%
    transform translate(0, 0)
