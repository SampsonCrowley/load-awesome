@import './mixins/add-view'

$color-1 = #fff
$color-2 = #333

.la-cube-transition
.la-cube-transition > div
  position relative
  box-sizing border-box

.la-cube-transition
  display block
  font-size 0
  color $color-1
  width 32px
  height 32px

  &.la-dark
    color $color-2

  >div
    display inline-block
    float none
    background-color currentColor
    border 0 solid currentColor
    position absolute
    top 0
    left 0
    width 14px
    height 14px
    margin-top -7px
    margin-left -7px
    border-radius 0
    animation cube-transition 1.6s 0s infinite ease-in-out

    &:last-child
      animation-delay -.8s

  &.la-sm
    width 16px
    height 16px

    >div
      width 6px
      height 6px
      margin-top -3px
      margin-left -3px

  &.la-2x
    width 64px
    height 64px

    >div
      width 28px
      height 28px
      margin-top -14px
      margin-left -14px

  &.la-3x
    width 96px
    height 96px

    >div
      width 42px
      height 42px
      margin-top -21px
      margin-left -21px

/*
 * Animation
 */

@keyframes cube-transition
  25%
    top 0
    left 100%
    transform scale(.5) rotate(-90deg)

  50%
    top 100%
    left 100%
    transform scale(1) rotate(-180deg)

  75%
    top 100%
    left 0
    transform scale(.5) rotate(-270deg)

  100%
    top 0
    left 0
    transform scale(1) rotate(-360deg)
