@import './mixins/add-view'

$color-1 = #fff
$color-2 = #333

.la-ball-square-clockwise-spin
.la-ball-square-clockwise-spin > div
  position relative
  box-sizing border-box

.la-ball-square-clockwise-spin
  display block
  font-size 0
  color $color-1
  width 26px
  height 26px

  &.la-dark
    color $color-2

  >div
    display inline-block
    float none
    background-color currentColor
    border 0 solid currentColor
    position absolute
    top 50%
    left 50%
    width 12px
    height 12px
    margin-top -6px
    margin-left -6px
    border-radius 100%
    animation ball-square-clockwise-spin 1s infinite ease-in-out

    &:nth-child(1)
      top 0
      left 0
      animation-delay -.875s

    &:nth-child(2)
      top 0
      left 50%
      animation-delay -.75s

    &:nth-child(3)
      top 0
      left 100%
      animation-delay -.625s

    &:nth-child(4)
      top 50%
      left 100%
      animation-delay -.5s

    &:nth-child(5)
      top 100%
      left 100%
      animation-delay -.375s

    &:nth-child(6)
      top 100%
      left 50%
      animation-delay -.25s

    &:nth-child(7)
      top 100%
      left 0
      animation-delay -.125s

    &:nth-child(8)
      top 50%
      left 0
      animation-delay 0s

  &.la-sm
    width 12px
    height 12px

    >div
      width 6px
      height 6px
      margin-top -3px
      margin-left -3px

  &.la-2x
    width 52px
    height 52px

    >div
      width 24px
      height 24px
      margin-top -12px
      margin-left -12px

  &.la-3x
    width 78px
    height 78px

    >div
      width 36px
      height 36px
      margin-top -18px
      margin-left -18px

/*
 * Animation
 */

@keyframes ball-square-clockwise-spin
  0%
    transform scale(.4)

  70%
    transform scale(1)
