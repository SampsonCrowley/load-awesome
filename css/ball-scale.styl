@import './mixins/add-view'

$color-1 = #fff
$color-2 = #333

.la-ball-scale
.la-ball-scale > div
  position relative
  box-sizing border-box

.la-ball-scale
  display block
  font-size 0
  color $color-1
  width 32px
  height 32px

  &.la-dark
    color $color-2

  >div
    display inline-block
    float none
    background-color currentColor
    border 0 solid currentColor
    width 32px
    height 32px
    border-radius 100%
    opacity 0
    animation ball-scale 1s 0s ease-in-out infinite

  &.la-sm
    width 16px
    height 16px

    >div
      width 16px
      height 16px

  &.la-2x
    width 64px
    height 64px

    >div
      width 64px
      height 64px

  &.la-3x
    width 96px
    height 96px

    >div
      width 96px
      height 96px

/*
 * Animation
 */

@keyframes ball-scale
  0%
    opacity 1
    transform scale(0)

  100%
    opacity 0
    transform scale(1)
