@import './mixins/add-view'

$color-1 = #fff
$color-2 = #333

.la-ball-elastic-dots
.la-ball-elastic-dots > div
  position relative
  box-sizing border-box

.la-ball-elastic-dots
  display block
  font-size 0
  color $color-1
  width 120px
  height 10px
  text-align center

  &.la-dark
    color $color-2

  >div
    display inline-block
    float none
    background-color currentColor
    border 0 solid currentColor
    width 10px
    height 10px
    white-space nowrap
    border-radius 100%
    animation ball-elastic-dots-anim 1s infinite

  &.la-sm
    width 60px
    height 4px

    >div
      width 4px
      height 4px

  &.la-2x
    width 240px
    height 20px

    >div
      width 20px
      height 20px

  &.la-3x
    width 360px
    height 30px

    >div
      width 30px
      height 30px

/*
 * Animation
 */

@keyframes ball-elastic-dots-anim
  0%
    margin 0
    transform scale(1)

  50%
    margin 0 5%
    transform scale(.65)
