@import './mixins/add-view'

$color-1 = #fff
$color-2 = #333

.la-square-loader
.la-square-loader > div
  position relative
  box-sizing border-box

.la-square-loader
  display block
  font-size 0
  color $color-1
  width 32px
  height 32px

  &.la-dark
    color $color-2

  >div
    display inline-block
    float none
    background-color currentColor
    border 0 solid currentColor
    width 100%
    height 100%
    background transparent
    border-width 2px
    border-radius 0
    animation square-loader 2s infinite ease

    &:after
      display inline-block
      width 100%
      vertical-align top
      content ""
      background-color currentColor
      animation square-loader-inner 2s infinite ease-in

  &.la-sm
    width 16px
    height 16px

    >div
      border-width 1px

  &.la-2x
    width 64px
    height 64px

    >div
      border-width 4px

  &.la-3x
    width 96px
    height 96px

    >div
      border-width 6px

/*
 * Animations
 */

@keyframes square-loader
  0%
    transform rotate(0deg)

  25%
    transform rotate(180deg)

  50%
    transform rotate(180deg)

  75%
    transform rotate(360deg)

  100%
    transform rotate(360deg)

@keyframes square-loader-inner
  0%
    height 0

  25%
    height 0

  50%
    height 100%

  75%
    height 100%

  100%
    height 0
