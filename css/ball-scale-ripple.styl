@import './mixins/add-view'

$color-1 = #fff
$color-2 = #333

.la-ball-scale-ripple
.la-ball-scale-ripple > div
  position relative
  box-sizing border-box

.la-ball-scale-ripple
  display block
  font-size 0
  color $color-1
  width 32px
  height 32px

  &.la-dark
    color $color-2

  >div
    display inline-block
    float none
    background-color currentColor
    border 0 solid currentColor
    width 32px
    height 32px
    background transparent
    border-width 2px
    border-radius 100%
    opacity 0
    animation ball-scale-ripple 1s 0s infinite cubic-bezier(.21, .53, .56, .8)

  &.la-sm
    width 16px
    height 16px

    >div
      width 16px
      height 16px
      border-width 1px

  &.la-2x
    width 64px
    height 64px

    >div
      width 64px
      height 64px
      border-width 4px

  &.la-3x
    width 96px
    height 96px

    >div
      width 96px
      height 96px
      border-width 6px

/*
 * Animation
 */

@keyframes ball-scale-ripple
  0%
    opacity 1
    transform scale(.1)

  70%
    opacity .65
    transform scale(1)

  100%
    opacity 0
